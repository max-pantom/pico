{
  "name": "pico",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.mjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "vite",
    "electron:build": "tsc -b && vite build",
    "desktop:dev": "vite",
    "desktop:build": "tsc -b && vite build",
    "desktop:start": "npm run desktop:build && electron .",
    "desktop:dist": "npm run desktop:build && electron-builder",
    "desktop:dist:dir": "npm run desktop:build && electron-builder --dir"
  },
  "build": {
    "appId": "com.pico.desktop",
    "productName": "Pico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "asar": true,
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "build/icons",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "diff": "^8.0.3",
    "dotenv": "^17.3.1",
    "electron-store": "^11.0.2",
    "framer-motion": "^12.34.3",
    "get-port": "^7.1.0",
    "keytar": "^7.9.0",
    "lucide-react": "^0.575.0",
    "ollama": "^0.6.3",
    "react": "^19.2.0",
    "react-diff-viewer-continued": "^4.1.2",
    "react-dom": "^19.2.0",
    "react-syntax-highlighter": "^16.1.0",
    "recharts": "^3.7.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.2.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tailwindcss": "^4.2.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
